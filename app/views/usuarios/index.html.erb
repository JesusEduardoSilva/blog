<div class="page-header">
  <h1>Usuários</h1>
<div class="row">
  <div class="col-xs-8">
    <%= link_to 'Novo', new_usuario_path,
            :class => 'btn btn-primary' %>
  </div>
  <div class="col-xs-4 text-right">
    <%= form_tag(usuarios_path, method: "get") do %>
      <div class="input-group">
        <%= text_field_tag(:p, '', class: 'form-control') %>
        <span class="input-group-btn">
          <%= button_tag class: 'btn btn-success' do %>
            <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
           <p id="notice"><%= notice %></p>
        </span>
</div>
      </div>
       
    <% end %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id %></td>
        <td><%= link_to usuario.nome, usuario_path(usuario) %></td>
        <td><%= usuario.email %></td>
        <td>
          <%= link_to 'Editar', edit_usuario_path(usuario),
                      :class => 'btn btn-default' %>
          
          <%= link_to 'Excluir', usuario_path(usuario),
                      :method => :delete,
                      :data => { :confirm => 'Confirma a exclusão?' },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
