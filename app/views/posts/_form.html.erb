<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <p><strong>Ops, ocorreram erros de validação:</strong></p>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :usuario_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :usuario_id, Usuario.all, :id, :nome, { include_blank: true }, class: 'form-control' %>
    </div>
    <%= error_span(@post[:usuario_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%= error_span(@post[:titulo]) %>
  </div>
  <div class="control-group">
    <%= f.label :conteudo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :conteudo, :class => 'form-control' %>
    </div>
    <%= error_span(@post[:conteudo]) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
