<div class="page-header">
<h1>Promoções</h1>
<div class="row">
  <div class="col-xs-8">
    <%= link_to 'Novo', new_produto_path, 
            :class => 'btn btn-primary' %>
  </div>
   <div class="col-xs-4 text-right">
    <%= form_tag(produtos_path, method: "get") do %>
      <div class="input-group">
        <%= text_field_tag(:p, '', class: 'form-control') %>
        <span class="input-group-btn">
          <%= button_tag class: 'btn btn-success' do %>
            <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
       <p id="notice"><%= notice %></p>   
 </span>
</div>
      </div>
       
    <% end %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>   
      <th></th>   
      <th>Titulo</th>     
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>        
        <td><%= image_tag(produto.cover.url(:medium)) %></td>
        <td><%= produto.titulo %></td>          
        <td><%= produto.valor %></td>
        <td><%= link_to 'Visualizar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Confirmar exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>