<%= form_for @produto, :html => {:class => "form-horizontal produto"} do |f| %>
  <% if @produto.errors.any? %>
    <div class="alert alert-danger">
      <p><strong>Ops, ocorreram erros de validação:</strong></p>
      <ul>
      <% @produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :Buscar_Imagem, :class => 'control-label' %><br>
    <div class="controls">
    <%= f.file_field :cover, :class => 'form-control' %>
  </div>
  <%= error_span(@produto[:cover]) %>
  </div>
  <div class="control-group">
    <%= f.label :Titulo, :class => 'control-label' %><br>
    <div class="controls">
    <%= f.text_field :titulo, :class => 'form-control' %>
  </div>
  <%= error_span(@produto[:titulo]) %>
  </div>
  <div class="control-group">
    <%= f.label :Descricao, :class => 'control-label' %><br>
    <div class="controls">
    <%= f.text_area :descricao, :class => 'form-control' %>
  </div>
  <%= error_span(@produto[:descricao]) %>
  </div>
    <div class="control-group">
    <%= f.label :Valor, :class => 'control-label' %><br>
    <div class="controls">
    <%= f.text_field :valor, :class => 'form-control' %>
  </div>
  <%= error_span(@produto[:valor]) %>
  </div>    
  <br>
  <div class="actions">
    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
  <br>
<% end %>
